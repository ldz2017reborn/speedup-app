<h2>Top 10 Posts by subscriptions</h2>

<table class="table">
  <tr>
    <th>標題</th>
    <th>作者</th>
    <th>訂閱數</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post_path(post) %></td>
      <td><%= post.user.display_name %></td>
      <td><%= post.subscriptions_count %></td>
    </tr>
  <% end %>
</table>
